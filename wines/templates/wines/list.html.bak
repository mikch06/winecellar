{% extends "./base.html" %}
{% block content %}
    <main up-main id="list-content" up-hungry>
      <h2>Weine</h2>

      <a up-layer="new modal" up-href="{% url 'wine_new' %}">
        âž• Neuer Wein
      </a>

      <table cellpadding="6">
        <thead>
          <tr>
            <th>Name</th>
            <th>Jahr</th>
            <th>Region</th>
            <th>Rebsorte</th>
            <th>Aktion</th>
          </tr>
        </thead>
        <tbody>
          {% for wine in wines %}
          <tr>
            <td>{{ wine.winename }}</td>
            <td>{{ wine.year }}</td>
            <td>{{ wine.region }}</td>
            <td>{{ wine.grapes }}</td>
            <td>
              <button up-layer="new modal" up-href="{% url 'wine_detail' wine.pk %}">
                Details
              </button>
            </td>
          </tr>
          {% empty %}
          <tr><td colspan="5">Keine Weine vorhanden.</td></tr>
          {% endfor %}
        </tbody>
      </table>
    </main>
{% endblock %}